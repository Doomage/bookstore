
@{
    ViewBag.Title = "Index";
}
<div id="notification-container" class="hidden"></div>


<h2>BookStore Home Page</h2>
<p>There are currently @ViewBag.TotalBookCount books</p>
<p>Book: @ViewBag.Book</p>

<div id="notification" class="alert alert-success alert-dismissible fade" role="alert">
    <strong>New Book Added!</strong> Check this out! <span class="notify-book-title">Title</span> by <span class="notify-book-author">Author</span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

@section scripts
{
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--Reference the notifications.js file that contains the hub client code -->
    <script src="~/Scripts/notifications.js"></script>
}
